        android:theme="@style/AppTheme">
        <activity android:name=".activities.TermosDeUsoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CategoriasActivity"
            android:label="Categorias" />
        <activity
            android:name=".activities.PreferenciasActivity"
            android:label="Interesses" />
        <activity
            android:name=".activities.AnunciantesActivity"
            android:label="Anunciantes" />
        <activity android:name=".activities.AnuncianteActivity" />
        <activity android:name=".activities.MeusAnunciosActivity" />
        <activity android:name=".activities.AvisoPerfilActivity" />
        <activity
            android:name=".activities.NovoPerfilActivity"
            android:label="Novo perfil" />
        <activity
            android:name=".activities.SelecionarPerfilActivity"
            android:label="Selecione o perfil" />
        <activity
            android:name=".activities.NovoAnuncioActivity"
            android:label="Novo anÃºncio" />
