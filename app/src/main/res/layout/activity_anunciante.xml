<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_anunciante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaora.anunciosapp.activities.AnuncianteActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/camera"
        android:id="@+id/imageView2"
        android:contentDescription="Ícone de câmera fotográfica" />

    <TextView
        android:text="Anunciante XXX Teste 23434"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNomeAnunciante"
        android:gravity="center"
        tools:textSize="30sp"
        tools:layout_marginBottom="40sp"
        android:textSize="24sp" />

    <TextView
        android:text="Telefone de contato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1" />

    <TextView
        android:text="(66) 1234-1234"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTelefone"
        android:textSize="24sp"
        android:layout_marginBottom="20sp" />

    <TextView
        android:text="Endereço"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <TextView
        android:text="Rua das XXX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEndereco"
        android:textSize="24sp"
        android:layout_marginBottom="20sp" />

    <TextView
        android:text="Número"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <TextView
        android:text="1234"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNumero"
        android:textSize="24sp" />

</LinearLayout>
